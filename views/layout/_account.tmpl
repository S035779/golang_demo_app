<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">
  <link type="image/x-icon" rel="shortcut icon" href="/public/img/favicon.ico">
  <title>{{ template "title" . }}</title>
  <!-- Bootstrap core CSS -->
  <link rel="stylesheet" href="/public/css/bootstrap.min.css">
  <link rel="stylesheet" href="/public/css/mdb.min.css">
  <link rel="stylesheet" href="/public/css/all.min.css">
  {{ template "css" . }}
</head>
<body>

  <!-- Header -->
  <nav class="navbar fixed-top navbar-expand-lg navbar-dark scrolling-navbar">
    <a class="navbar-brand" href="/client" target="_blank">
      <strong>Gin Framework Boilerplate</strong>
    </a>
    <button class="navbar-toggler" type="button"
      data-toggle="collapse" 
      data-target="#navbarSupportedContent" 
      aria-controles="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <!-- Collapse -->
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        {{ if .session.IsAlive }}
        <li class="nav-item">
          <a class="nav-link" href="/client">マイページ</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/client/about">利用規約</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/client/contact">ユーザ情報</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/client/message">メッセージ</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/account/signout/client">ログアウト</a>
        </li>
        {{ else }}
        <li class="nav-item">
          <a class="nav-link" href="/account/signup/client#account">会員登録</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/account/signin/client#account">ログイン</a> 
        </li>
        {{ end }}
      </ul>
      <ul class="navbar-nav nav-flex-icons">
        <li class="nav-item">
          <a href="https://www.facebook.com/{{ .facebook }}" class="nav-link" target="_blank"><i class="fab fa-facebook-f"></i></a>
        </li>
        <li class="nav-item">
          <a href="https://twitter.com/{{ .twitter }}" class="nav-link" target="_blank"><i class="fab fa-twitter"></i></a>
        </li>
        <li class="nav-item">
          <a href="https://github.com/{{ .github }}" class="nav-link border border-light rounded" target="_blank"><i class="fab fa-github mr-2"></i>GIN GitHub</a>
        </li>
      </ul>
    </div>
    <!--/.Collapse -->
  </nav>
  <!-- /.Header -->

  <!-- Intro -->
  <div class="view" style="background-image: url('https://mdbootstrap.com/img/Photos/Others/images/93.jpg'); background-repeat: no-repeat; background-size: cover;">
    <!-- Mask & flexbox options-->
    <div class="mask rgba-black-light d-flex justify-content-center align-items-center">
      <!-- Content -->
      <div class="text-center white-text mx-5 wow fadeIn">
        <h1 class="mb-4"><strong>Learn Bootstrap 4 with GIN</strong></h1>
        <p><strong>Best & free guide of responsive web design</strong></p>
        <p class="mb-4 d-none d-md-block">
          <strong>The most comprehensive tutorial for the Bootstrap 4. Loved by over 500 000 users. Video and written versions available.
            Create your own, stunning website.
          </strong>
        </p>
        <a href="#account" class="btn btn-outline-white btn-lg">
          Start sign-up & sign-in<i class="fas fa-graduation-cap ml-2"></i>
        </a>
      </div>
      <!-- Content -->
    </div>
    <!-- Mask & flexbox options-->
  </div>
  <!-- /.Intro -->
  
  <!-- Container -->
  <main class="container-fluid">
    <section id="account" class="wow fadeIn">
      <!-- Error -->
      {{ if .error }}
      <div class="m-1">
        <div class="alert alert-danger" role="alert">{{ .error }}</div>
      </div>
      {{ end }}
      <!-- /.Error -->

      <!-- Message -->
      {{ if .message }}
      <div class="m-1">
        <div class="alert alert-success" role="alert">{{ .message }}</div>
      </div>
      {{ end }}
      <!-- /.Message -->

      {{ template "content" . }}
    </section>
  </main>
  <!-- /.Container -->

  <!-- Footer -->
  <footer class="page-footer fixed-bottom text-center font-small wow fadeIn">
    <!-- Call to action -->
    <div class="pt-4">
      <a class="btn btn-outline-white" href="https://mdbootstrap.com/getting-started/" target="_blank" role="button">Download MDB<i class="fas fa-download ml-2"></i></a>
    <a class="btn btn-outline-white" href="https://mdbootstrap.com/bootstrap-tutorial/" target="_blank" role="button">Start free tutorial<i class="fas fa-graduation-cap ml-2"></i></a>
    </div>
    <!-- /.Call to action -->
    <hr class="my-4">
    <!-- Social icons -->
    <div class="pb-4">
      <a href="https://www.facebook.com/{{ .facebook }}" target="_blank"><i class="fab fa-facebook-f mr-3"></i></a>
      <a href="https://twitter.com/{{ .twitter }}" target="_blank"><i class="fab fa-twitter mr-3"></i></a>
      <a href="https://www.youtube.com/watch?v={{ .youtube }}" target="_blank"><i class="fab fa-youtube mr-3"></i></a>
      <a href="https://plus.google.com/u/0/b/{{ .google }}" target="_blank"><i class="fab fa-google-plus-g mr-3"></i></a>
      <a href="https://dribbble.com/{{ .dribbble }}" target="_blank"><i class="fab fa-dribbble mr-3"></i></a>
      <a href="https://pinterest.com/{{ .pinterest }}" target="_blank"><i class="fab fa-pinterest mr-3"></i></a>
      <a href="https://github.com/{{ .github }}" target="_blank"><i class="fab fa-github mr-3"></i></a>
      <a href="http://codepen.io/{{ .codepen }}/" target="_blank"><i class="fab fa-codepen mr-3"></i></a>
    </div>
    <!-- /.Social icons -->
    <!-- Copyright -->
    <div class="footer-copyright py-3">© 2019 Copyright:
      <a class="text-white" href="{{ .baseurl }}">{{ .sitename }}</a>
    </div>
    <!-- /.Copyright -->
  </footer>
  <!-- /Footer -->
</body>
<script src="/public/js/jquery.min.js"></script>
<script src="/public/js/popper.min.js"></script>
<script src="/public/js/bootstrap.min.js"></script>
<script src="/public/js/mdb.min.js"></script>
{{ template "script" . }}
</html>
